<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="1.9"
    android:background="@mipmap/back"
    tools:context="com.example.jatin.fmfp.CommittesActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conference\nChair"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#3f51b5"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="International Advisory Committee"
            android:background="#3f51b5"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="National Advisory Committee"
            android:background="#3f51b5"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local Advisory Committee"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#3f51b5"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Technical Programme Committee"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#3f51b5"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local Organizing Committee"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#3f51b5"
            android:textColor="#fff"
            />


    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>